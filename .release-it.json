{
  "git": {
    "changelog": "npx changelogen -r %s",
    "commitMessage": "chore: release v${version}",
    "requireCleanWorkingDir": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "skipChecks": true
  },
  "plugins": {
    "release-it-pnpm": {
      "inFile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "after:bump": "npx changelogen --output"
  }
}
